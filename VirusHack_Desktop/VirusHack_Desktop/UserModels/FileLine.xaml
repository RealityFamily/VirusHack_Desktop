<UserControl x:Class="VirusHack_Desktop.Pages.FileLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirusHack_Desktop.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Button Background="Transparent" 
            Margin="7.5"
            BorderThickness="0"
            Click="Button_Click"
            HorizontalContentAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <Image Source="/Resources/Images/Ellipse1.png"
                   Margin="0, 0, 10, 0"/>
            <TextBlock x:Name="FileName"
                       Text="методичка.txt"
                       VerticalAlignment="Center"
                       FontSize="18"/>
        </StackPanel>
    </Button>
</UserControl>
