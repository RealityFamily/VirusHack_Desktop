<UserControl x:Class="VirusHack_Desktop.UserModels.WeekLesson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirusHack_Desktop.UserModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">

    <Button x:Name="background" Click="background_Click"
            BorderThickness="0"
            Margin="1"
            MouseRightButtonDown="background_MouseRightButtonDown">
        <TextBlock TextAlignment="Center"
                   TextWrapping="WrapWithOverflow">
            <Run Name="Type"
                 FontSize="14"
                 FontWeight="Bold"
                 Text="Лабораторная"/>
            <LineBreak/>
            <Run Name="Name"
                 FontSize="14"
                 Text="Современная история менеджмента"/>
        </TextBlock>
    </Button>
</UserControl>
